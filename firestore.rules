rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function memberDoc(orgId) {
      return isSignedIn()
        ? get(/databases/$(database)/documents/orgs/$(orgId)/members/$(request.auth.uid))
        : null;
    }

    function memberExists(orgId) {
      let member = memberDoc(orgId);
      return member != null && member.exists();
    }

    function memberIsActive(orgId) {
      let member = memberDoc(orgId);
      return member != null && member.exists() && member.data.status == 'active';
    }

    function orgRole(orgId) {
      let member = memberDoc(orgId);
      return member != null && member.exists() ? member.data.role : null;
    }

    function hasRole(orgId, roles) {
      let role = orgRole(orgId);
      return memberIsActive(orgId) && roles.hasAny([role]);
    }

    function isOrgMember(orgId) {
      return memberIsActive(orgId);
    }

    match /orgs/{orgId} {
      allow read: if isOrgMember(orgId);
      allow create: if false; // org creation is server-side only
      allow update, delete: if hasRole(orgId, ['owner', 'admin']);

      match /members/{userId} {
          allow read: if isOrgMember(orgId) || (isSignedIn() && request.auth.uid == userId);
          allow create, update, delete: if hasRole(orgId, ['owner', 'admin']);
      }

        match /clients/{clientId} {
          allow read, write: if isOrgMember(orgId);
        }

        match /files/{fileId} {
          allow create, read, update, delete: if isOrgMember(orgId);
        }

        match /proposals/{proposalId} {
          allow read, write: if isOrgMember(orgId);
        }

        match /settings/{doc=**} {
          allow read, write: if hasRole(orgId, ['owner', 'admin']);
        }
    }

    match /proposalShares/{token} {
      function notExpired() {
        return resource != null && resource.data.expiresAt != null && resource.data.expiresAt > request.time;
      }

      allow get: if resource != null && notExpired() && resource.data.token == token;
      allow create: if isSignedIn() && request.resource.data.orgId != null
        && exists(/databases/$(database)/documents/orgs/$(request.resource.data.orgId)/members/$(request.auth.uid));
      allow update, delete: if isSignedIn() && resource != null
        && exists(/databases/$(database)/documents/orgs/$(resource.data.orgId)/members/$(request.auth.uid));
    }
  }
}
