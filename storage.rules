rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function member(orgId) {
      return isSignedIn()
        ? firestore.get(/databases/$(database)/documents/orgs/$(orgId)/members/$(request.auth.uid))
        : null;
    }

    function isOrgMember(orgId) {
      let memberDoc = member(orgId);
      return memberDoc != null && memberDoc.exists() && memberDoc.data.status == 'active';
    }

    function isValidDateSegments(year, month) {
      return year.matches('^[0-9]{4}$') && month.matches('^[0-9]{2}$');
    }

    match /orgs/{orgId}/clients/{clientId}/vault/{category}/{year}/{month}/{fileName} {
      allow read, write: if isOrgMember(orgId) && isValidDateSegments(year, month);
    }

    match /orgs/{orgId}/proposals/{proposalId}/attachments/{year}/{month}/{fileName} {
      allow read, write: if isOrgMember(orgId) && isValidDateSegments(year, month);
    }

    match /orgs/{orgId}/projects/{projectId}/deliverables/{year}/{month}/{fileName} {
      allow read, write: if isOrgMember(orgId) && isValidDateSegments(year, month);
    }

    // Project scoped client uploads (clients can upload only here)
    match /orgs/{orgId}/projects/{projectId}/client_uploads/{year}/{month}/{fileName} {
      allow read: if canReadFile(orgId, memberClientId(member(orgId)), 'project', projectId, 'client_uploads');
      allow write: if isValidDateSegments(year, month)
        && canClientUpload(orgId, memberClientId(member(orgId)), 'project', projectId);
    }

    // Project reference materials (staff-only)
    match /orgs/{orgId}/projects/{projectId}/reference/{year}/{month}/{fileName} {
      allow read: if canReadFile(orgId, null, 'project', projectId, 'reference');
      allow write: if isValidDateSegments(year, month)
        && canStaffUpload(orgId, 'project', projectId, null);
    }

    match /orgs/{orgId}/templates/{templateType}/{year}/{month}/{fileName} {
      allow read, write: if isOrgMember(orgId) && isValidDateSegments(year, month);
    }

    match /{path=**} {
      allow read, write: if false;
    }
  }
}
